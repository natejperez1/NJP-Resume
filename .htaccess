# mod_rewrite starts here

RewriteEngine on

# Does not apply to existing directories. If folder exists in folder tree then don't change anything and don't run the rule

RewriteCond %{REQUEST_FILENAME} !-d

# Check for file in Dir with .html extension

RewriteCond %{REQUEST_FILENAME}/.html -f

# Here we show the page that has the .html extension

RewriteRule ^(.*)$ $1.html [NC,L]